{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "rootDir": "src",
    "outDir": "dist",

    "strict": true,
    "skipLibCheck": true,

    "types": ["node"],
    "resolveJsonModule": true,
    "baseUrl": "."
  },
  "include": ["src", "node_modules/@types"],
  "exclude": ["dist"]
}